{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "client": "cd client && npm run start",
    "dev-server": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "dev": "concurrently --kill-others \"npm run client\" \"npm run dev-server\"",
    "test-server": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "test": "concurrently --kill-others \"npm run client\" \"npm run test-server\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.7.3",
    "mongoose": "^7.2.2",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "sharp": "^0.32.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
